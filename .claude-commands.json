{
  "repo_owner": "redpop",
  "repo_name": "claude-code-slash-commands",
  "default_branch": "main",
  "description": "Centralized repository for reusable Claude Code slash commands",
  "version": "1.8.0",
  "fork_config": {
    "auto_update_urls": true,
    "preserve_original_references": false,
    "custom_prefix_support": true
  },
  
  "subAgentOrchestration": {
    "enabled": true,
    "version": "2.0.0",
    "description": "Hybrid Sub-Agent Orchestration System with Task Tool and Claude Code Sub-Agents",
    
    "defaults": {
      "tokenBudget": 3000,
      "timeout": 30000,
      "retryOnFailure": true,
      "maxRetries": 2,
      "parallelExecution": true
    },
    
    "performanceMode": "balanced",
    "performanceModes": {
      "conservative": {
        "maxConcurrentAgents": 5,
        "tokenBudgetPerAgent": 2000,
        "timeout": 20000
      },
      "balanced": {
        "maxConcurrentAgents": 10,
        "tokenBudgetPerAgent": 3000,
        "timeout": 30000
      },
      "aggressive": {
        "maxConcurrentAgents": 20,
        "tokenBudgetPerAgent": 4000,
        "timeout": 45000
      }
    },
    
    "synthesis": {
      "format": "markdown",
      "deduplication": true,
      "prioritization": "severity",
      "includeMetrics": true,
      "generateActionItems": true
    },
    
    "outputFormats": {
      "default": "markdown",
      "available": ["markdown", "json", "csv", "mermaid"],
      "includeTimestamps": true,
      "includeAgentMetadata": false
    },
    
    "errorHandling": {
      "continueOnAgentFailure": true,
      "minimumSuccessfulAgents": 0.7,
      "fallbackStrategy": "sequential",
      "logErrors": true
    },
    
    "caching": {
      "enabled": false,
      "ttl": 3600,
      "cacheLocation": "~/.claude/cache/sub-agents"
    },
    
    "commandOverrides": {
      "orchestration:security-audit": {
        "performanceMode": "conservative",
        "synthesis": {
          "prioritization": "cvss-score"
        }
      },
      "orchestration:performance-scan": {
        "defaults": {
          "tokenBudget": 4000
        }
      },
      "research:deep-dive": {
        "performanceMode": "aggressive",
        "synthesis": {
          "format": "markdown",
          "includeReferences": true
        }
      }
    },
    
    "integrations": {
      "git": {
        "autoCommitReports": false,
        "reportBranch": "claude-analysis"
      },
      "ci": {
        "failOnCriticalIssues": true,
        "generateArtifacts": true
      }
    },
    
    "metrics": {
      "trackPerformance": true,
      "logLocation": "~/.claude/logs/sub-agent-metrics.log",
      "metricsToTrack": [
        "executionTime",
        "tokenUsage",
        "agentSuccessRate",
        "speedupFactor"
      ]
    },
    
    "experimental": {
      "adaptiveAgentCount": false,
      "smartTokenAllocation": false,
      "predictiveAnalysis": false,
      "realtimeProgress": false
    }
  },
  
  "hybridMode": {
    "enabled": true,
    "description": "Hybrid architecture combining Task Tool parallelization with Claude Code Sub-Agents",
    
    "agentRegistry": {
      "security-specialist": {
        "type": "sub-agent",
        "location": "agents/security-specialist.md",
        "autoInvoke": ["security", "vulnerability", "CVE", "OWASP"],
        "priority": "high"
      },
      "performance-optimizer": {
        "type": "sub-agent",
        "location": "agents/performance-optimizer.md",
        "autoInvoke": ["performance", "bottleneck", "optimization", "slow"],
        "priority": "medium"
      },
      "test-engineer": {
        "type": "sub-agent",
        "location": "agents/test-engineer.md",
        "autoInvoke": ["test", "coverage", "unit test", "integration"],
        "priority": "medium"
      },
      "code-architect": {
        "type": "sub-agent",
        "location": "agents/code-architect.md",
        "autoInvoke": ["architecture", "design", "structure", "pattern"],
        "priority": "medium"
      },
      "refactoring-expert": {
        "type": "sub-agent",
        "location": "agents/refactoring-expert.md",
        "autoInvoke": ["refactor", "code smell", "clean code", "technical debt"],
        "priority": "medium"
      }
    },
    
    "delegationStrategy": {
      "automatic": true,
      "thresholdScore": 0.7,
      "maxDelegations": 3,
      "parallelDelegation": true
    },
    
    "hybridCommands": {
      "analyze-deep": {
        "phases": ["parallel-scan", "expert-analysis", "synthesis"],
        "scannerCount": 10,
        "expertDelegation": true
      },
      "security-deep": {
        "phases": ["security-scan", "specialist-review", "remediation"],
        "scannerCount": 8,
        "mandatoryExpert": "security-specialist"
      }
    }
  }
}